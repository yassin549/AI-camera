# Frontend only (set these in Vercel project env settings)
# Single-path mode: one public API/video endpoint on ngrok.
VITE_API_BASE=https://YOUR-NGROK-DOMAIN.ngrok-free.app
VITE_API_KEY=4a00372e2f061de230a70ef8303411ff

# Metadata transport (leave unset to auto-derive from VITE_API_BASE)
VITE_WS_METADATA_URL=
VITE_METADATA_LATEST_URL=
VITE_METADATA_POLL_MS=250

# Janus disabled in this mode
VITE_JANUS_HTTP_URL=
VITE_JANUS_MOUNTPOINT=1

# Single video path: backend MJPEG over the same public domain.
VITE_DIRECT_STREAM_URL=/api/media/mjpeg
VITE_DIRECT_STREAM_KIND=image

# Disable WebRTC/Janus and keep one transport only.
VITE_DISABLE_BACKEND_VIDEO=true
VITE_DISABLE_WEBRTC=true
