# Frontend only (set these in Vercel project env settings)
# Single-path mode: one public API/video endpoint on ngrok.
VITE_API_BASE=https://YOUR-NGROK-DOMAIN.ngrok-free.app
VITE_API_KEY=4a00372e2f061de230a70ef8303411ff

# Metadata transport (leave unset to auto-derive from VITE_API_BASE)
VITE_WS_METADATA_URL=
VITE_METADATA_LATEST_URL=
VITE_WEBRTC_OFFER=
VITE_METADATA_POLL_MS=250

# Janus route is disabled in frontend for single-domain ngrok mode.
VITE_JANUS_HTTP_URL=/janus
VITE_JANUS_MOUNTPOINT=1
VITE_DISABLE_JANUS=true

# Disable direct image stream on ngrok free (browser warning page breaks <img> MJPEG).
VITE_DIRECT_STREAM_URL=
VITE_DIRECT_STREAM_KIND=auto

# API WebRTC mode (metadata/identities still use backend APIs).
VITE_DISABLE_BACKEND_VIDEO=false
VITE_DISABLE_WEBRTC=false
